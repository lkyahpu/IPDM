{
    "name": "ddpm-RS-Unet",
    "phase": "train", // train (train+val) or test
    "distributed": false,
    "gpu_ids": [
        0
    ],
    "path": { //set the path
        "log": "logs",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
    },
    "datasets": {
        "train": {
            "name": "LWIR", // Options: "LEVIR-WHU-DSIFN", "Million-AID"
            "dataroot": "dataset_all/train", // Options: "dataset/LEVIR-WHU-DSIFN", "dataset/Million-AID"
            "resolution": 256, // high resolution
            "h_size": 512,
            "w_size": 640,
            "batch_size": 6,
            "num_workers": 2,
            "use_shuffle": true,
            "data_len": -1 // -1 represents all data used in train
        },
        "val": {
           "name": "LWIR", // Options: "LEVIR-WHU-DSIFN", "Million-AID"
            "dataroot": "dataset_all/val", // Options: "dataset/LEVIR-WHU-DSIFN", "dataset/Million-AID"
            "resolution": [128, 160], // high resolution
            "h_size": 512,
            "w_size": 640,
            "batch_size": 1,
            "num_workers": 1,
            "use_shuffle": false,
            "data_len": -1 // -1 represents all data used in val
        }
    },
    "model": {
        "which_model_G": "sr3", // use the ddpm or sr3 network structure
        "finetune_norm": false,
        "unet": {
            "in_channel": 6,
            "out_channel": 2,
            "inner_channel": 64,
            "channel_multiplier": [
                1,
                2,
                2,
                2,
                2
            ],
            "attn_res": [
                2
            ],
            "res_blocks": 2,
            "dropout": 0.2
        },
        "beta_schedule": { // use munual beta_schedule for acceleration
            "train": {
                "schedule": "cosine",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            },
            "val": {
                "schedule": "cosine",
                "n_timestep": 2000,
                "linear_start": 1e-6,
                "linear_end": 1e-2
            }
        },
        "diffusion": {
            "image_size": 256,
            "h_size": 512,
            "w_size": 640,
            "channels": 3, //sample channel
            "loss": "l2", //options "l1" or "l2"
            "conditional": false // unconditional generation or unconditional generation(super_resolution)
        }
    },
    "train": {
        "n_iter": 1000000,
        "val_freq": 1e5,
        "save_checkpoint_freq": 1e5,
        "print_freq": 1000,
        "optimizer": {
            "type": "adamw",
            "lr": 1e-5
        },
        "ema_scheduler": { // not used now
            "step_start_ema": 5000,
            "update_ema_every": 1,
            "ema_decay": 0.9999
        }
    },
    "wandb": {
        "project": "ddpm-RS-unet"
    }
}
